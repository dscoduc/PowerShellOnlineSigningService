<?xml version="1.0"?>
<configuration>

  <appSettings>
<!--#######################################################
    NOTE: DO NOT MODIFY UNLESS YOU KNOW WHAT YOU ARE DOING
    #######################################################
    Configure Log4net to use an external configuration file 
    #######################################################-->
    <add key="log4net.Config" value="log4net.config"/>
    <add key="log4net.Config.Watch" value="True"/>
<!--#######################################################-->
    
    <!-- Optional settings -->
    <add key="default_owner" value="dscoduc"/>
    <add key="default_repository" value="PowerShellScripts"/>
    
    <!-- Required settings -->
    <add key="approved_extensions" value="^.+\.((ps1)|(ps1))$"/>
    <add key="github_root_url" value="api.github.com"/>
    <add key="auth_token" value=""/>
  </appSettings>
  
  <system.web>
    <compilation debug="false" targetFramework="4.5">
      <assemblies>
        <add assembly="System.Management.Automation, Version=1.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35"/>
      </assemblies>
    </compilation>
    <customErrors mode="RemoteOnly"/>  <!-- Specify 'Off or RemoteOnly' -->
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/>
    <httpRuntime targetFramework="4.5" enableVersionHeader="false" />
  </system.web>
  
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false"/>
    <defaultDocument>
      <files>
        <clear/>
        <add value="default.aspx"/>
      </files>
    </defaultDocument>
    <modules runAllManagedModulesForAllRequests="true">
      <add name="serverHeaderModule" type="PowerShellOnlineSigningService.serverHeaderModule, PowerShellOnlineSigningService"/>
    </modules>
    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
